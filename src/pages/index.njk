{% extends 'layout.njk' %}

{% block title %}JUMUN 2019 | Home{% endblock %}

{% block content %}
{% import 'macros/nav.njk' as nav %}
{{ nav.nav('h') }}
<main id="content">
    <header id="index-header">
        <div>
            <h2>Jadavpur University</h2>
            <h1>Model United Nations</h1>
            <h2 style="text-align: right;">2019</h2>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 10 10">
            <defs>
                <linearGradient id="g1" x1="20%" y1="100%" x2="80%" y2="0%">
                    <stop offset="0%" style="stop-color:#0563b2;stop-opacity:1" />
                    <stop offset="80%" style="stop-color:#f62c42;stop-opacity:1" />
                </linearGradient>
            </defs>
            <use xlink:href="/img/logo.svg#logo" fill="url(#g1)"/>
        </svg>
    </header>
    <section>
        <h1 style="text-align: center;">Committees</h1>
        <div id="committees">
            {% import 'macros/committees.njk' as commit %}
            {{ commit.gen_commit_card("United Nations <wbr> General Assembly <wbr> Disarmament and <wbr> International <wbr> Security", "/committees/disec", "disec.svg", "#745302") }}
            {{ commit.gen_commit_card("International <wbr> Press", "/committees/ip", "ip.svg", "#00afae") }}
            {{ commit.gen_commit_card("All India <wbr> Political <wbr> Parties Meet", "/committees/aippm", "aippm.svg", "#8d2152") }}
            {{ commit.gen_commit_card("Seneca Falls <wbr> Conference", "/committees/sfc", "sfc.svg", "#f98f21") }}
            {{ commit.gen_commit_card("United Nations <wbr> High Commissioner <wbr> for Rufugees", "/committees/hcr", "hcr.svg", "#8d4022") }}
            {{ commit.gen_commit_card("United Nations <wbr> Security Council", "/committees/unsc", "unsc.svg", "#0272b1") }}
            {{ commit.gen_commit_card("United Nations <wbr> Conference on <wbr> Trade and <wbr> Development", "/committees/unctd", "unctd.svg", "#47c675") }}
            {{ commit.gen_commit_card("Asian Security <wbr> and Cooperation <wbr> Summit", "/committees/ascs", "ascs.svg", "#a87b2a") }}
        </div>
    </section>
</main>
{% endblock %}
